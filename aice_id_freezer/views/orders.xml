            parent="fom_usage_mgmt"
            sequence="3"
            action='action_fom'/>

        <menuitem id="fom_usage_mgmt_menu_6"
            name="TakeBack"
            parent="fom_usage_mgmt"
            sequence="4"
            action='action_fom'/>

        <menuitem id="fom_usage_mgmt_menu_6"
            name="Visit"
            parent="fom_usage_mgmt"
            sequence="6"
